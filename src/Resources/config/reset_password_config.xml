<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="alpsify.reset_password_api.reset_password_helper" class="Alpsify\ResetPasswordAPIBundle\ResetPasswordAPIHelper">
            <argument type="service" id="alpsify.reset_password_api.generator.token_generator"/>
            <argument />
            <argument />
        </service>
        <service id="Alpsify\ResetPasswordAPIBundle\ResetPasswordAPIHelper" alias="alpsify.reset_password_api.reset_password_api_helper"/>

        <service id="alpsify.reset_password_api.generator.random_generator" class="Alpsify\ResetPasswordAPIBundle\Generator\RandomGenerator">
            <argument />
        </service>

        <service id="alpsify.reset_password_api.generator.token_generator" class="Alpsify\ResetPasswordAPIBundle\Generator\TokenGeneratorInterface">
            <argument>%kernel.secret%</argument>
            <argument />
            <argument type="service" id="alpsify.reset_password_api.generator.random_generator"/>
        </service>
    </services>
</container>
